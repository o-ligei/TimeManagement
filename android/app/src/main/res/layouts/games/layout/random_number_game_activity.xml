<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.games.RandomNumberGameActivity">

  <LinearLayout
      android:layout_width="409dp"
      android:layout_height="729dp"
      android:layout_marginStart="1dp"
      android:layout_marginTop="1dp"
      android:layout_marginEnd="1dp"
      android:layout_marginBottom="1dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/number_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="@string/number_input_title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/target_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/input_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="60dp"
          android:gravity="center">

        <Button
            android:id="@+id/random_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/random_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/random_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />
      </TableRow>

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center">

        <Button
            android:id="@+id/random_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/random_button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/random_button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />
      </TableRow>

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center">

        <Button
            android:id="@+id/random_button_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/random_button_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/random_button_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

      </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/number_handson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/handson" />

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>